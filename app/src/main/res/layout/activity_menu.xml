<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MenuActivity"
    android:orientation="vertical">

    <!-- TODO: Make textsize dynamic -->

      <Button
          android:id="@+id/menu_activity_create_button"
          android:layout_width="fill_parent"
          android:layout_height="0dp"
          android:textAlignment="center"
          android:textSize="@dimen/menu_activity_button_text_size"
          android:text="@string/menu_activity_create_button"
          android:layout_weight="1"
          />

    <Button
        android:id="@+id/menu_activity_edit_button"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/menu_activity_create_button"
        android:textAlignment="center"
        android:textSize="@dimen/menu_activity_button_text_size"
        android:text="@string/menu_activity_edit_button"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/menu_activity_run_button"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/menu_activity_edit_button"
        android:textAlignment="center"
        android:textSize="@dimen/menu_activity_button_text_size"
        android:text="@string/menu_activity_run_button"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/menu_activity_share_button"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/menu_activity_run_button"
        android:textAlignment="center"
        android:textSize="@dimen/menu_activity_button_text_size"
        android:text="@string/menu_activity_share_button"
        android:layout_weight="1"/>



</LinearLayout>
